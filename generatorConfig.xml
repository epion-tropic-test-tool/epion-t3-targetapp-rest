<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<!-- see : http://www.mybatis.org/generator/configreference/xmlconfig.html -->
<generatorConfiguration>
    <context id="tododb" targetRuntime="MyBatis3">


        <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />
        <plugin type="org.mybatis.generator.plugins.RowBoundsPlugin" />
        <plugin type="org.mybatis.generator.plugins.MapperAnnotationPlugin"/>
        <plugin type="org.mybatis.generator.plugins.FluentBuilderMethodsPlugin"/>

        <!-- JDBC接続定義 -->
        <jdbcConnection
                driverClass="com.mysql.jdbc.Driver"
                connectionURL="jdbc:mysql://mysql:3306/tododb?useSSL=false"
                userId="user"
                password="password">
        </jdbcConnection>
        
        <javaTypeResolver>
            <property name="useJSR310Types" value="TIMESTAMP_WITH_TIMEZONE" />
        </javaTypeResolver>

        <!-- Model/Entity -->
        <javaModelGenerator
                targetPackage="com.zomu.t.epion.tropic.test.tool.epiont3targetapprest.domain.model"
                targetProject="./src-gen/main/java">
        </javaModelGenerator>

        <!-- XMLMapper -->
        <sqlMapGenerator
                targetPackage="com.zomu.t.epion.tropic.test.tool.epiont3targetapprest.domain.mapper"
                targetProject="./src-gen/main/resources">
        </sqlMapGenerator>

        <!-- MapperInterface -->
        <javaClientGenerator
                type="XMLMAPPER"
                targetPackage="com.zomu.t.epion.tropic.test.tool.epiont3targetapprest.domain.mapper"
                targetProject="./src-gen/main/java">
        </javaClientGenerator>

        <!-- Tables -->
        <!--
        <table tableName="user"/>
        -->
        <table tableName="todo" domainObjectName="TodoModel"/>

    </context>
</generatorConfiguration>
